{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "NodeNext",
    "target": "ESNext",

    "moduleResolution": "NodeNext",

    "strict": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noEmit": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
  },
  "include": [
    "src/**/*.ts", "../client/drizzle.config.ts", "drizzle.config.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}

{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "NodeNext",
    "target": "ESNext",

    "moduleResolution": "NodeNext",

    "strict": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true
  },
  "include": [
    "client/src/**/*.ts",
    "client/src/**/*.svelte",
    "eslint.config.js",
    "client/svelte.config.js",
    "client/tailwind.config.ts",
    "client/vite.config.ts",
    "shared/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "client/build",
    "server/dist"
  ],
}
